{
  "name": "drift/amqp-bundle",
  "description": "AMQP Bundle for DriftPHP, a framework on top of Symfony and ReactPHP components",
  "type": "library",
  "license": "MIT",

  "authors": [
    {
      "name": "Marc Morera",
      "email": "yuhu@mmoreram.com"
    }
  ],

  "require": {
    "php": "^7.4 || ^8.0",
    "symfony/dependency-injection": "^5.0",
    "bunny/bunny": "^0.5.0",
    "drift/http-kernel": "^0.1.15",
    "mmoreram/base-bundle": "^2.3"
  },

  "require-dev": {
    "phpunit/phpunit": "^9"
  },

  "autoload": {
    "psr-4": {
      "Drift\\AMQP\\": "."
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  }
}
